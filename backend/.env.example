# Whisper音声文字起こしAPI 設定ファイル

# === アプリケーション設定 ===
APP_NAME="Whisper音声文字起こしAPI"
VERSION="1.0.0"
DEBUG=false

# === モデル設定 ===
# Whisperモデルの保存ディレクトリ
MODEL_CACHE_DIR="models/whisper"
# デフォルトで使用するモデル
DEFAULT_MODEL="base"
# デフォルトの言語
DEFAULT_LANGUAGE="ja"

# === ファイル処理設定 ===
# アップロードファイルの最大サイズ（バイト）
MAX_FILE_SIZE=26214400  # 25MB
# 許可する音声フォーマット（カンマ区切り）
ALLOWED_AUDIO_FORMATS="audio/wav,audio/mp3,audio/mp4,audio/m4a,audio/flac"

# === 音声処理設定 ===
# デフォルトのサンプルレート（Hz）
DEFAULT_SAMPLE_RATE=16000
# ストリーミング処理時のチャンク時間（秒）
CHUNK_DURATION=2.0

# === サーバー設定 ===
# サーバーのホスト
HOST="0.0.0.0"
# サーバーのポート
PORT=8000
